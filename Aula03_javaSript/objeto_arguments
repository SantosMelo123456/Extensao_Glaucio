// exemplo de object arguments:
function somaTodos() {
  let total = 0;

  // arguments Ã© um objeto parecido com array
  for (let i = 0; i < arguments.length; i++) {
    total += arguments[i];
  }

  return total;
}

console.log(somaTodos(2, 3));          
console.log(somaTodos(1, 4, 7, 2));    
console.log(somaTodos(10, 20, 30, 40));